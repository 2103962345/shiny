        <PackageReference Include="ReactiveUI.Fody" Version="11.1.23" />
        <PackageReference Include="DryIoc.dll" Version="4.0.7" />
        <PackageReference Include="Shiny.Prism" Version="1.1" />
        <PackageReference Include="Prism.Extensions.DryIoc" Version="7.2.0.1233-pre" />
        <PackageReference Include="Shiny.Integrations.AppCenter" Version="1.1" />
        <PackageReference Include="Xamarin.Forms" Version="4.5.0.282-pre4" />
        <PackageReference Include="Xamarin.Forms.Maps" Version="4.5.0.282-pre4" /> 
        <PackageReference Include="Acr.UserDialogs.Forms" Version="1.0.0.7-beta" />
    </ItemGroup>

    <ItemGroup>
        <None Include="FodyWeavers.xsd" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\$ext_projectname$.Data\$ext_projectname$.Data.csproj" />
