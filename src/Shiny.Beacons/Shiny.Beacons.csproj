<Project Sdk="MSBuild.Sdk.Extras" ToolsVersion="15.0">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.0</TargetFrameworks>
        <TargetFrameworks Condition=" $(TargetsToBuild.Contains('android')) ">$(TargetFrameworks);monoandroid90</TargetFrameworks>
        <TargetFrameworks Condition=" $(TargetsToBuild.Contains('ios')) ">$(TargetFrameworks);xamarinios10</TargetFrameworks>
        <!--<TargetFrameworks Condition=" $(TargetsToBuild.Contains('mac')) ">$(TargetFrameworks);xamarin.mac20</TargetFrameworks>
        <TargetFrameworks Condition=" $(TargetsToBuild.Contains('watchos')) ">$(TargetFrameworks);xamarin.watchos10</TargetFrameworks>
        <TargetFrameworks Condition=" $(TargetsToBuild.Contains('tvos')) ">$(TargetFrameworks);xamarin.tvos10</TargetFrameworks>-->
        <TargetFrameworks Condition=" $(TargetsToBuild.Contains('uap')) ">$(TargetFrameworks);uap10.0.16299</TargetFrameworks>
        <!--<TargetFrameworks Condition=" $(TargetsToBuild.Contains('tizen')) ">$(TargetFrameworks);tizen50</TargetFrameworks>-->
        <Description>iBeacons for your all your xplat needs</Description>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\..\nuget\beacons.txt" PackagePath="readme.txt" Pack="true" />
        <Compile Remove="Platforms\**\*.cs" />
        <None Include="Platforms\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('netstandard')) ">
        <ProjectReference Include="..\Shiny.Core\Shiny.Core.csproj" />
        <Compile Include="Platforms\Shared\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('uap')) ">
        <ProjectReference Include="..\Shiny.Core\Shiny.Core.csproj" />
        <ProjectReference Include="..\Shiny.BluetoothLE\Shiny.BluetoothLE.csproj" />
        <Compile Include="Platforms\Shared\**\*.cs" />
        <Compile Include="Platforms\Uwp\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('monoandroid')) ">
        <ProjectReference Include="..\Shiny.Core\Shiny.Core.csproj" />
        <ProjectReference Include="..\Shiny.BluetoothLE\Shiny.BluetoothLE.csproj" />
        <Compile Include="Platforms\Shared\**\*.cs" />
        <Compile Include="Platforms\Android\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('xamarinios')) ">
        <ProjectReference Include="..\Shiny.Core\Shiny.Core.csproj" />
        <Compile Include="Platforms\Shared\**\*.cs" />
        <Compile Include="Platforms\iOS\**\*.cs" />
    </ItemGroup>
</Project>
