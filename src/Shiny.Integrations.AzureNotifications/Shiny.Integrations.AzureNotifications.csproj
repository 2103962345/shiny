<Project Sdk="MSBuild.Sdk.Extras">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.0;xamarin.ios10;monoandroid90</TargetFrameworks>
        <TargetFrameworks Condition=" $(OS) == 'WINDOWS_NT' ">uap10.0.16299;$(TargetFrameworks)</TargetFrameworks>
        <RootNamespace>Shiny.Push.AzureNotifications</RootNamespace>
        <Description>Shiny Integration - Microsoft Azure Notification Hubs</Description>
    </PropertyGroup>
    
    <ItemGroup>
        <None Include="readme.txt" pack="true" PackagePath="." />
        <Compile Remove="Platforms\**\*.cs" />
        <None Include="Platforms\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('netstandard')) ">
        <ProjectReference Include="..\Shiny.Core\Shiny.Core.csproj" />
        <ProjectReference Include="..\Shiny.Push\Shiny.Push.csproj" />
        <Compile Include="Platforms\Shared\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('uap')) ">
        <PackageReference Include="Microsoft.Azure.NotificationHubs" Version="3.3.0" />
        <Compile Include="Platforms\Shared\**\*.cs" />
        <ProjectReference Include="..\Shiny.Core\Shiny.Core.csproj" />
        <ProjectReference Include="..\Shiny.Push\Shiny.Push.csproj" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('xamarin.ios')) ">
        <PackageReference Include="Microsoft.Azure.NotificationHubs" Version="3.3.0" />
        <ProjectReference Include="..\Shiny.Core\Shiny.Core.csproj" />
        <ProjectReference Include="..\Shiny.Push\Shiny.Push.csproj" />
        <Compile Include="Platforms\Shared\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('monoandroid')) ">
        <PackageReference Include="Microsoft.Azure.NotificationHubs" Version="3.3.0" />
        <ProjectReference Include="..\Shiny.Core\Shiny.Core.csproj" />
        <ProjectReference Include="..\Shiny.Push\Shiny.Push.csproj" />
        <Compile Include="Platforms\Shared\**\*.cs" />
    </ItemGroup>    

</Project>