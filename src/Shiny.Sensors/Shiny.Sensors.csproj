<Project Sdk="MSBuild.Sdk.Extras" ToolsVersion="15.0">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.0;$(TargetFrameworks)</TargetFrameworks>
        <Description>Shiny addon for all imaginable sensors for mobile devices</Description>
    </PropertyGroup>

    <PropertyGroup Condition=" $(TargetsToBuild.Contains('android')) ">
        <TargetFrameworks>$(TargetFrameworks);monoandroid90</TargetFrameworks>
    </PropertyGroup>

    <PropertyGroup Condition=" $(TargetsToBuild.Contains('ios')) ">
        <TargetFrameworks>$(TargetFrameworks);xamarinios10</TargetFrameworks>
    </PropertyGroup>

    <PropertyGroup Condition=" $(TargetsToBuild.Contains('uap')) ">
        <TargetFrameworks>$(TargetFrameworks);uap10.0.16299</TargetFrameworks>
    </PropertyGroup>

    <PropertyGroup Condition=" $(TargetsToBuild.Contains('tizen')) ">
        <TargetFrameworks>$(TargetFrameworks);tizen50</TargetFrameworks>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\..\nuget\sensors.txt" PackagePath="readme.txt" Pack="true" />
        <Compile Remove="Platforms\**\*.cs" />
        <None Include="Platforms\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('netstandard')) ">
        <ProjectReference Include="..\Shiny.Core\Shiny.Core.csproj" />
        <Compile Include="Platforms\Shared\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('xamarinios')) ">
        <ProjectReference Include="..\Shiny.Core\Shiny.Core.csproj" />
        <Compile Include="Platforms\Shared\**\*.cs" />
        <Compile Include="Platforms\*iOS*\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('xamarin.watchos')) ">
        <ProjectReference Include="..\Shiny.Core\Shiny.Core.csproj" />
        <Compile Include="Platforms\Shared\**\*.cs" />
        <Compile Include="Platforms\*watchOS*\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('uap')) ">
        <ProjectReference Include="..\Shiny.Core\Shiny.Core.csproj" />
        <Compile Include="Platforms\Shared\**\*.cs" />
        <Compile Include="Platforms\Uwp\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('monoandroid')) ">
        <ProjectReference Include="..\Shiny.Core\Shiny.Core.csproj" />
        <Compile Include="Platforms\Shared\**\*.cs" />
        <Compile Include="Platforms\Android\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('tizen')) ">
        <ProjectReference Include="..\Shiny.Core\Shiny.Core.csproj" />
        <Compile Include="Platforms\Shared\**\*.cs" />
        <Compile Include="Platforms\Tizen\**\*.cs" />
    </ItemGroup>

</Project>